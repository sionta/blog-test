# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 2

[script/**]
indent_size = 4
end_of_line = lf

[*.sh]
indent_size = 4
end_of_line = lf

[*.{cmd,bat,ps1}]
indent_size = 4
end_of_line = crlf
